# =============================================================================
# CONFIGURACIÓN MQTT PARA SERVICIO DE INGESTA
# =============================================================================
# Activar para migración real a MQTT

# Feature Flag: Habilita receptor MQTT en ingesta
FF_MQTT_INGEST_ENABLED=true

# Modo dual: procesa tanto MQTT como HTTP (para migración gradual)
FF_MQTT_INGEST_DUAL_MODE=true

# Broker EMQX
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USE_TLS=false

# Autenticación (dejar vacío si EMQX tiene anonymous=true)
MQTT_USERNAME=
MQTT_PASSWORD=

# Topic prefix (NO cambiar - estándar del sistema)
MQTT_TOPIC_PREFIX=iot

# Deduplicación
MQTT_DEDUP_TTL_SECONDS=60

# =============================================================================
# BASE DE DATOS (heredado de iot_monitor_backend/.env)
# =============================================================================
# Si no existe, carga desde iot_monitor_backend/.env automáticamente

# DB_HOST=localhost
# DB_PORT=1434
# DB_USER=sa
# DB_PASSWORD=tu_password
# DB_NAME=iot_monitoring_system

# =============================================================================
# BATCH INSERTER
# =============================================================================
BATCH_BUFFER_SIZE=100
BATCH_FLUSH_INTERVAL=5.0
BATCH_MAX_SIZE=500
